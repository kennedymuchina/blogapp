extends layout

block content
    -data = data || {}
    if errors
        ul
            for errors in errors
                li= error.msg

    form(action='.' method="POST")
        div(class='form-group')
            label(for="name") Name:
            input(
                class="form-control"
                name="name"
                id="name"
                type="text"
                value=data.name
            )

        div(class='form-group')        
            label(for="email") Email:
            input(
                class="form-control"
                name="email"
                id="email"
                type="text"
                value=data.email
            )

        input(
            type="submit"
            class='btn btn-primary'
            value="Submit"
        )
